<div class="modal fade" id="event-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Create Event</h4>
      </div>
      <div class="modal-body">
        <%= form_for @event, class: "form-horizontal" do |f| %>
          <!-- <fieldset> -->
          <!-- Form Name -->
          <legend>Users name might go here...</legend>

          <!-- Text input-->
          <div class="control-group">
            <%= f.label :title, "Title", class: "control-label" %>
            <div class="controls">
              <%= f.text_field :title, class: "input-xlarge" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :description, "Description",  class: "control-label" %>
            <div class="controls">
              <%= f.text_area :description %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :address, "Address", class: "control-label" %>
            <div class="controls">
              <%= f.text_field :address, class: "input-xlarge" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :max_people, "Number of People", class: "control-label" %>
            <div class="input-group spinner">
              <%= f.text_field :max_people, value: 1, class: "form-control" %>
              <div class="input-group-btn-vertical">
                <button class="btn btn-default" type="button"><i class="fa fa-caret-up"></i></button>
                <button class="btn btn-default" type="button"><i class="fa fa-caret-down"></i></button>
              </div>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :start_time, "Event Start Time", class: "control-label" %>
          <div class="input-group date datetimepicker1">
            <%= f.text_field :start_time, class: "form-control" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>

          <div class="control-group">
            <%= f.label :end_time, "Event End Time", class: "control-label" %>
          <div class= "input-group date datetimepicker1">
            <%= f.text_field :end_time, class: "form-control" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :image, "Image", class: "control-label" %>
          <div class="controls">
            <%= f.file_field :image, id: "filebutton", class: "input-file" %>
          </div>
        </div><br>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Save Change", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>