<div id="map-canvas" data-locations="<%= @locations %>" data-latitude="<%= @user_location.latitude %>" data-longitude="<%= @user_location.longitude %>"></div>
<div>
  <button type="button" class="btn btn-success center-block" id="create-event-button" data-toggle="modal" data-target="#event-form">Create Event</button>
</div>
<div class="row">
  <% @events.each do |event| %>
  <div class="col-md-3 col-sm-12 col-xs-12">
    <div class="jumbotron">
      <h2> <%= event.title %> </h2>
      <h3> <%= event.address %> </h3>
      <h4> Guests. <span> <%= event.num_people_attending %> / <%= event.max_people %> </span></h4><hr>
      <p> <%= event.description %> </p>
      <p><a class="btn btn-primary btn-lg" href="#" role="button">Join Event</a></p>
    </div>
  </div>
<% end %>
</div>

<%= render "events/form" %>
