<div id="map-canvas" data-locations="<%= @locations %>" data-latitude="<%= @user_location.latitude %>" data-longitude="<%= @user_location.longitude %>">
</div>

<div id="list-canvas">
  <% @events.each do |event| %>
  <div class="jumbotron2">
    <h2><%= event.title %></h2>
    <h3><%= event.address %></h3>
    <h4> Guests. <span><%= event.num_people_attending %> / <%= event.max_people %> </span></h4><hr>
    <p><%= event.description %></p>
    <p><a class="btn btn-primary btn-lg" href="#" role="button">Join Event</a></p>
  </div>
  <% end %>
</div>

<%= render "events/form" %>
